<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_30"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:id="@+id/tv_close"
        android:textColor="@color/textColor"
        android:textSize="@dimen/sp_15"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingTop="@dimen/dp_2"
        android:layout_gravity="end"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commonToolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务标题："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:id="@+id/tv_task_title"
                    android:textColor="@color/black"
                    android:text="标题标题标题标题标题标题"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务内容："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:minLines="3"
                    android:id="@+id/tv_task_content"
                    android:gravity="top"
                    android:text="内容内容内容内容内容"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺名称："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:text="店铺名称店铺名称"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:id="@+id/tv_task_shop"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝贝链接："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:text="请输入宝贝链接"
                    android:minLines="3"
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:id="@+id/tv_task_link"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝贝关键词："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:text="关键词1，关键词2，"
                    android:minLines="3"
                    android:gravity="top"
                    android:textIsSelectable="true"
                    android:textColor="@color/black"
                    android:id="@+id/tv_task_key_word"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝贝图片："
                android:padding="@dimen/dp_10"
                style="@style/taskTitleStyle" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/dp_10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放单数量："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_weight="1"
                    android:padding="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:id="@+id/tv_task_number"
                    android:text="0"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品金额："
                    android:textColor="@color/black"
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/dp_5"
                    android:layout_weight="1"
                    android:id="@+id/tv_task_price"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:digits="0123456789."
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@color/COLOR_F0DCDCDC"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每单商品佣金："
                    style="@style/taskTitleStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:id="@+id/tv_task_commission"
                    android:text="10"
                    android:digits="0123456789."
                    android:gravity="top"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>