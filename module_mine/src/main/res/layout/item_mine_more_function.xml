<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginBottom="@dimen/dp_12"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:id="@+id/iv_icon"
        android:padding="@dimen/dp_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/iv_message"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:id="@+id/tv_name"
        android:textColor="@color/textColor_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
        app:layout_constraintLeft_toLeftOf="@+id/iv_icon"
        app:layout_constraintRight_toRightOf="@+id/iv_icon"
        android:text="设置"/>

    <TextView
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:id="@+id/tv_badge"
        android:background="@drawable/shape_circle_red_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_9"
        android:text="10"
        android:textStyle="bold"
        android:gravity="center"
        android:elevation="@dimen/dp_3"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>
